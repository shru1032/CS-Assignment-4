//Program to find the nth Fibonacci term using recursion.

#include <stdio.h>
int fibo(int);//Function prototype.

int main()
{
    int n;
    printf("Enter n to find the nth Fibonacci term : ");
    scanf("%d",&n);
    printf("The %dth Fibonacci term is %d.",n,fibo(n));
    return 0;
}

//Function definition
int fibo(int n)
{
    if(n==0)
        return 0;
    else if (n==1)
        return 1;
    else
        return fibo(n-1)+fibo(n-2);
}
